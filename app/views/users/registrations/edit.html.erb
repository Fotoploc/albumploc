<section class="section">
  <header class="header header--title">
    <h1> DigiPloc </h1>
  </header>
  <div class="container container--xs" style="background-color: transparent">
    <div class="container" style="background-color: transparent">
    <%= link_to "Voltar", :back, class:"btn btn--secondary" %>
        <br/>
        <button class="btn btn--nav btn--nav--active">Edit</button>
    </div>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>

      <div class="field form__field">
        <%= f.label :email %><br />
        <%= f.email_field :email, class:"form__input", autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field form__field">
          <%= f.label "Nome" %><br />
          <%= f.text_field :name, class:"form__input", autofocus: true, autocomplete: "name", placeholder:"seu nome", required: true %>
      </div>

      <div class="field form__field">
        <%= f.label "Código" %><br />
        <%= f.text_field :code, class:"form__input", autofocus: true, autocomplete: "code", placeholder:"código da empresa", required: true %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field form__field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, id:"form__field__password", class:"form__input", autocomplete: "new-password", placeholder:"password", required: true, minlength: "6"%>
        <div id="minimum_password_length" class="form__error"></div>
      </div>

      <div class="field form__field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, id:"form__field__password__confirmation", class:"form__input", autocomplete: "new-password", placeholder:"password", required: true, minlength: "6"%>
        <div id="password_confirmation" class="form__error"></div>
      </div>

      <div class="field  form__field">
        <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
        <%= f.password_field :current_password, class:"form__input", autocomplete: "current-password" %>
      </div>
      <div class="actions  form__action form__action--spaced">
        <%= f.submit "Update", class:"btn btn--primary"%>
      </div>
    <% end %>

  <%= button_to "Cancel my account", registration_path(resource_name), class:"btn btn--secondary", data: { confirm: "Are you sure?" }, method: :delete %>

  </div>

  <%= render "users/shared/footer-basic"%>
</section>
<%= javascript_include_tag("helpers/password_confirmation.js") %>


