<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "form" }) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="field form__field">
    <%= f.label :email, "E-mail" %><br />
    <%= f.email_field :email, class:"form__input", autofocus: true, autocomplete: "email" %>
  </div>

  <div class="actions form__action form__action--spaced">
    <%= f.submit "Receber link por email", class:"btn btn--primary" %>
  </div>
<% end %>